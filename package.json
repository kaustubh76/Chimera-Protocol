{
  "name": "chimera-protocol",
  "version": "1.0.0",
  "description": "The first platform for confidential financial strategies on blockchain",
  "main": "index.js",
  "scripts": {
    "build": "npm run build:contracts && npm run build:frontend",
    "build:contracts": "forge build",
    "build:frontend": "cd frontend && npm run build",
    "test": "npm run test:contracts && npm run test:integration",
    "test:contracts": "forge test",
    "test:integration": "npx hardhat test test/integration/",
    "test:coverage": "forge coverage",
    "deploy:local": "npx hardhat run scripts/deploy-local.js --network local",
    "deploy:testnet": "npx hardhat run scripts/deploy-testnet.js --network fhenixHelium",
    "deploy:mainnet": "npx hardhat run scripts/deploy-production.js --network mainnet",
    "verify:testnet": "node scripts/verify-testnet.js",
    "start:local": "docker-compose up -d && npm run deploy:local",
    "start:frontend": "cd frontend && npm run dev",
    "start:monitor": "node scripts/monitor.js",
    "lint": "npm run lint:contracts && npm run lint:frontend",
    "lint:contracts": "forge fmt --check",
    "lint:frontend": "cd frontend && npm run lint",
    "security": "npm run security:contracts && npm run security:deps",
    "security:contracts": "slither . && mythril analyze contracts/",
    "security:deps": "npm audit",
    "docs": "npm run docs:contracts && npm run docs:api",
    "docs:contracts": "forge doc",
    "docs:api": "typedoc src/",
    "clean": "forge clean && rm -rf node_modules",
    "setup": "npm install && cd frontend && npm install",
    "prettier": "prettier --write ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ChimeraProtocol/chimera-core.git"
  },
  "keywords": [
    "defi",
    "confidential-computing",
    "fhenix", 
    "uniswap-v4",
    "encrypted-strategies",
    "dark-pool",
    "zk-portfolio",
    "mev-protection",
    "institutional-defi"
  ],
  "author": "Chimera Protocol Team",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ChimeraProtocol/chimera-core/issues"
  },
  "homepage": "https://chimera.finance",
  "devDependencies": {
    "@nomicfoundation/hardhat-foundry": "^1.1.1",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@openzeppelin/hardhat-upgrades": "^1.28.0",
    "@typechain/ethers-v5": "^10.2.1",
    "@typechain/hardhat": "^7.0.0",
    "@types/chai": "^4.3.11",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.10.6",
    "chai": "^4.3.10",
    "dotenv": "^16.3.1",
    "ethers": "^5.7.2",
    "hardhat": "^2.19.4",
    "hardhat-gas-reporter": "^1.0.9",
    "prettier": "^3.1.1",
    "prettier-plugin-solidity": "^1.2.0",
    "slither-analyzer": "^0.1.0",
    "solidity-coverage": "^0.8.5",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@chainlink/contracts": "^0.6.1",
    "@fhenixprotocol/contracts": "^1.0.0",
    "@fhenixprotocol/fhenix-cli": "^1.0.0",
    "@fhenixprotocol/fhenix.js": "^1.0.0",
    "@openzeppelin/contracts": "^4.9.0",
    "@openzeppelin/contracts-upgradeable": "^4.9.0",
    "@uniswap/v4-core": "^1.0.0",
    "@uniswap/v4-periphery": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "packageManager": "npm@8.19.4"
}
